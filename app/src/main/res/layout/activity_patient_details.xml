<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Patient Name -->
    <TextView
        android:id="@+id/patientNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="16dp"/>

    <!-- Appointment Date -->
    <TextView
        android:id="@+id/appointmentDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:paddingBottom="8dp"/>

    <!-- Appointment Time -->
    <TextView
        android:id="@+id/appointmentTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:paddingBottom="24dp"/>

    <!-- Start Test Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Test"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue"
        app:cornerRadius="8dp"
        app:rippleColor="@color/light_blue"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:stateListAnimator="@null"/>

    <!-- Previous Reports Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/previousReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous Reports"
        android:textColor="@color/white"
        app:backgroundTint="@color/green"
        app:cornerRadius="8dp"
        app:rippleColor="@color/sap_green"
        android:elevation="4dp"
        android:stateListAnimator="@null"/>
</LinearLayout>